#!/usr/bin/env python2
"""
buildnml - create namelist
"""

#Bootstrap python path
import sys
import os
if "CIMEROOT" not in os.environ:
    sys.stderr.write("ERROR: CIMEROOT must be defined\n")
    sys.exit(1)
sys.path.append(os.path.join(os.environ["CIMEROOT"],"scripts","Tools"))

from standard_script_setup import *
from CIME.case import Case
import CIME.build_nml

###############################################################################
def parse_command_line(args, description):
###############################################################################
    parser = argparse.ArgumentParser(
	    description=description,
            formatter_class=argparse.ArgumentDefaultsHelpFormatter
	)

    CIME.utils.setup_standard_logging_options(parser)
    parser.add_argument("caseroot", nargs="?", default=os.getcwd(),
                        help="Case directory for building namelist")
    args = parser.parse_args(args[1:])
    CIME.utils.handle_standard_logging_options(args)
    return args.caseroot


###############################################################################
def _main_func(description):
###############################################################################
    if "--test" in sys.argv:
        test_results = doctest.testmod(verbose=True)
        sys.exit(1 if test_results.failed > 0 else 0)

    caseroot = parse_command_line(sys.argv, description)
    case = Case(caseroot)
    CIME.build_nml.build_x_nml(case,'xatm','ATM')


if __name__ == "__main__":
    _main_func(__doc__)


