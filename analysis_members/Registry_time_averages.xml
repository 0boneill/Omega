	<nml_record name="AM_timeAverages" mode="forward;analysis">
		<nml_option name="config_AM_timeAverages_enable" 
		            type="logical" 
		            default_value=".false." 
		            units="unitless"
				 	description="If true, ocean analysis member time averages is called."
					possible_values=".true. or .false."
		/>
		<nml_option name="config_AM_timeAverages_compute_on_startup" 
		            type="logical" 
		            default_value=".true." 
		            units="unitless"
				 	description="Logical flag determining if an analysis member computation occurs on start-up."
					possible_values=".true. or .false."
		/>
		<nml_option name="config_AM_timeAverages_write_on_startup" 
					type="logical" 
					default_value=".false." 
					units="unitless"
					description="Logical flag determining if an analysis member output occurs on start-up."
					possible_values=".true. or .false."
		/>
		<nml_option name="config_AM_timeAverages_compute_interval" 
					type="character" 
					default_value="dt" 
					units="unitless"
					description="Interval that determines frequency of computation for the time_averages analysis member."
					possible_values="Any valid time stamp or 'dt'. This must also be <= output_interval / 2 (at least two samples in a series)."
		/>
		<nml_option name="config_AM_timeAverages_stream_name" 
					type="character" 
					default_value="timeAveragesOutput" 
					units="unitless"
					description="Name of stream the time averages analysis member will average."
					possible_values="An existing stream that will be modified with time averages."
		/>

        <!--
		<nml_option name="config_AM_timeAverages_copy_mesh" 
					type="logical" 
					default_value=".false."
					units="unitless"
					description="Add the mesh to the output."
					possible_values=".true. or .false."
		/>
		-->

		<nml_option name="config_AM_timeAverages_operation"
					type="character"
					default_value="avg"
					units="unitless"
					description="A list of operations describing type of reduction operations to apply to the time series."
					possible_values="an operation, where it can be 'avg', 'min', or 'max'"
		/>
		<nml_option name="config_AM_timeAverages_number_of_buffers"
					type="integer"
					default_value="1"
					units="unitless"
					description="Number of accumulation buffers to collect for a stream."
					possible_values="a positive integer"
		/>
		<nml_option name="config_AM_timeAverages_initial_times"
					type="character"
					default_value="same_as_simulation"
					units="unitless"
					description="A list of absolute times describing when to start accumulating."
					possible_values="a list of absolute times separated by spaces, or 'same_as_simulation'."
		/>
		<nml_option name="config_AM_timeAverages_duration_intervals"
					type="character"
					default_value="same_as_repeat"
					units="unitless"
					description="A list of time durations describing how long to accumulate."
					possible_values="a list of time durations separated by spaces, or 'same_as_repeat'. Must be >= compute_interval * 2."
		/>
		<nml_option name="config_AM_timeAverages_repeat_intervals"
					type="character"
					default_value="same_as_reset"
					units="unitless"
					description="A list of time durations describing the accumulation periodicity (how often to accumulate)."
					positive_values="a list of time durations separated by spaces, or 'same_as_reset'. Must be <= reset_interval."
		/>
		<nml_option name="config_AM_timeAverages_reset_intervals"
					type="character"
					default_value="same_as_output"
					units="unitless"
					description="A list of time durations describing the buffer reset periodicity (how often to reset)."
					possible_values="a list of time durations separated by spaces, or 'same_as_output'. Must be <= output_interval."
		/>

	</nml_record>

	<packages>
		<package name="timeAveragesAMPKG" description="This package includes variables required for the time averages analysis member."/>
	</packages>

	<streams>
		<stream name="timeAveragesOutput" 
				type="none"
				mode="forward;analysis"
				filename_template="analysis_members/timeAverages.$Y-$M-$D.nc"
				filename_interval="01-00-00_00:00:00"
				output_interval="00-00-01_00:00:00"
				packages="timeAveragesAMPKG"
				clobber_mode="truncate"
				runtime_format="single_file"/>

    <var_array name="tracersSurfaceValue"/>
    <var_array name="surfaceVelocity"/>
    <var_array name="SSHGradient"/>
    <var name="ssh"/>
    <var name="normalVelocity"/>
    <var name="velocityZonal"/>
    <var name="velocityMeridional"/>
    <var name="vertVelocityTop"/>
    <var name="normalTransportVelocity"/>
    <var name="transportVelocityZonal"/>
    <var name="transportVelocityMeridional"/>
    <var name="vertTransportVelocityTop"/>

	</streams>

