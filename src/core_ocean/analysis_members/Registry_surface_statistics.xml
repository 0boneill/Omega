<nml_record name="surface_statistics" mode="forward;analysis">
	<nml_option name="config_use_surface_statistics" type="logical" default_value=".true." units="unitless"
		description="If true, ocean analysis member surface_statistics is called."
		possible_values=".true. or .false."
	/>
	<nml_option name="config_surface_statistics_compute_interval" type="character" default_value="same_as_output" units="unitless"
		description="Timestamp determining how often analysis member computation should be performed."
		possible_values="'DDDD_HH:MM:SS'"
	/>
	<nml_option name="config_surface_statistics_compute_startup" type="logical" default_value=".true." units="unitless"
		description="Logical flag determining if an analysis member computation occurs on start-up."
		possible_values=".true. or .false."
	/>
</nml_record>
<packages>
	<package name="amSurfaceStatisticsPkg" description="This package includes variables required for the surface statistics analysis member."/>
</packages>
<streams>
        <stream name="surfaceStatisticsOutput"
                        type="none"
                        filename_template="analysis_members/surface_statistics.$Y-$M-$D_$h.$m.$s.nc"
                        output_interval="00-00-05_00:00:00"
                        filename_interval="01-00-00_00:00:00"
                        packages="amSurfaceStatisticsPkg"
                        clobber_mode="truncate"
                        runtime_format="single_file">
                <var name="xtime"/>
        </stream>
</streams>
<var_struct name="amSurfaceStatistics" time_levs="1" packages="amSurfaceStatisticsPkg">
	<var_array name="minSurfaceStatistics" type="real" dimensions="Time">
		<var name="minSurfaceSSH" array_group="mins" units="m"
			 description="Minimum sea-surface height"
		/>
	</var_array>
	<var_array name="maxSurfaceStatistics" type="real" dimensions="Time">
		<var name="maxSurfaceSSH" array_group="maxes" units="m"
			 description="Maximum sea-surface height"
		/>
	</var_array>
	<var_array name="avgSurfaceStatistics" type="real" dimensions="Time">
		<var name="avgSurfaceSSH" array_group="avg" units="m"
			 description="Average sea-surface height"
		/>
	</var_array>
        <var_array name="locationMinSurfaceStatistics" type="real" dimensions="TWO Time">
                <var name="locMinSurfaceSSH" array_group="avg" units="radians"
                         description="(longitude,latitue) of minimum sea-surface height minimum"
                />
        </var_array>
        <var_array name="locationMaxSurfaceStatistics" type="real" dimensions="TWO Time">
                <var name="locMaxSurfaceSSH" array_group="avg" units="radians"
                         description="(longitude,latitue) of maximim sea-surface height minimum"
                />
        </var_array>
</var_struct>
