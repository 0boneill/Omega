  ! TYPE int,real,double
  integer function put_att_id_{TYPE} (ncid, varid, name, var) result(ierr)
    use iso_c_binding
    integer, intent(in) :: ncid
    integer, intent(in) :: varid
    character(len=*), intent(in) :: name
    {VTYPE}, intent(in) :: var

    interface
       integer(C_INT) function PIOc_put_att_{NCTYPE} (ncid, varid, name, xtype, len, op) &
            bind(C,name="PIOc_put_att_{NCTYPE}")
         use iso_c_binding
         integer(C_INT), value :: ncid
         integer(C_INT), value :: varid
         character(C_CHAR) :: name
         integer(C_INT), value :: xtype
         integer(C_LONG), value :: len
         {CTYPE} :: op
       end function PIOc_put_att_{NCTYPE}
    end interface
    integer :: cvarid
    if(varid==PIO_GLOBAL) then
       cvarid = -1
    else
       cvarid = varid
    end if
    ierr = PIOc_put_att_{NCTYPE} (ncid,cvarid,name, PIO_{TYPE}, 1_C_LONG, var)

  end function put_att_id_{TYPE}
  integer function put_att_id_text (ncid, varid, name, var) result(ierr)
    use iso_c_binding
    integer, intent(in) :: ncid
    integer, intent(in) :: varid
    character(len=*), intent(in) :: name
    character(len=*), intent(in) :: var
    interface
       integer(C_INT) function PIOc_put_att_text (ncid, varid, name, len, op) &
            bind(C,name="PIOc_put_att_text")
         use iso_c_binding
         integer(C_INT), value :: ncid
         integer(C_INT), value :: varid
         character(C_CHAR) :: name
         integer(C_LONG), value :: len
         character(C_char) :: op(*)
       end function PIOc_put_att_text
    end interface
    integer :: cvarid

    if(varid==PIO_GLOBAL) then
       cvarid = -1
    else
       cvarid = varid
    end if
    ierr = PIOc_put_att_text (ncid,cvarid,name, int(len(var),C_LONG), var)

  end function put_att_id_text

  integer function put_att_1d_id_text (ncid, varid, name, var) result(ierr)  
    use iso_c_binding
    integer, intent(in) :: ncid
    integer, intent(in) :: varid
    character(len=*), intent(in) :: name
    character(len=*), intent(in) :: var(:)
    character, allocatable :: nvalue(:)
    integer :: slen, alen, i, j, k

    slen = len(var(1))
    alen = size(var)
    allocate(nvalue(slen*alen))
    
    do i=1,alen 
       j= len_trim(var(i))
       do k=1,j
          nvalue(k+(i-1)*slen) = var(i)(k:k)
       end do
       nvalue(j+1+(i-1)*slen) = C_NULL_CHAR
    end do
    ierr =  put_att_1d_id_text_internal (ncid, varid, name, slen*alen, nvalue)

    deallocate(nvalue)

  end function put_att_1d_id_text


  integer function put_att_1d_id_text_internal (ncid, varid, name, arrlen, var) result(ierr)
    use iso_c_binding
    integer, intent(in) :: ncid
    integer, intent(in) :: varid
    character(len=*), intent(in) :: name
    integer, intent(in) :: arrlen
    character(C_char), intent(in) :: var(arrlen)
    interface
