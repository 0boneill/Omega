<?xml version="1.0"?>
<machine MACH="hobart">
  <module_system type="module">
    <init_path lang="perl">/usr/share/Modules/init/perl.pm</init_path>
    <init_path lang="csh">/usr/share/Modules/init/csh</init_path>
    <init_path lang="bash">/usr/share/Modules/init/bash</init_path>
    <cmd_path lang="perl">/usr/bin/modulecmd perl</cmd_path>
    <modules>
      <purge/>
    </modules>
    <modules compiler="intel">
      <load>compiler/intel/15.0.2.164</load>
    </modules>
    <modules compiler="intel" mpilib="mvapich2">
      <unload>mpi/intel/openmpi-1.8.1-qlc</unload>
      <load>mpi/intel/mvapich2-1.8.1-qlc</load>
    </modules>
    <modules compiler="pgi">
      <load>compiler/pgi/15.1</load>
    </modules>
    <modules compiler="pgi" mpilib="mvapich2">
      <unload>mpi/pgi/openmpi-1.8.1-qlc</unload>
      <load>mpi/pgi/mvapich2-1.8.1-qlc</load>
    </modules>
    <modules compiler="nag">
      <load>compiler/nag/6.0</load>
      <xmlchange>MPILIB=openmpi</xmlchange>
    </modules>
    <modules compiler="gnu">
      <load>compiler/gnu/4.8.3</load>
    </modules>
  </module_system>
  <environment_variables>
    <env name="P4_GLOBMEMSIZE">500000000</env>
    <env name="NETCDF_DIR">$NETCDF_PATH</env>
  </environment_variables>
  <limits>
    <limit name="stacksize">unlimited</limit>
    <limit name="coredumpsize">unlimited</limit>
  </limits>
</machine>
