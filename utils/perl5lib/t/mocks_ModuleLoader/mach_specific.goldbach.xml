<?xml version="1.0"?>
<machine MACH="goldbach">
  <module_system type="module">
    <init_path lang="perl">/usr/share/Modules/init/perl.pm</init_path>
    <init_path lang="csh">/usr/share/Modules/init/csh</init_path>
    <init_path lang="bash">/usr/share/Modules/init/bash</init_path>
    <cmd_path lang="perl">/usr/bin/modulecmd perl</cmd_path>
    <modules>
      <purge/>
    </modules>
    <modules compiler="intel">
      <load>compiler/intel/14.0.2</load>
    </modules>
    <modules compiler="pgi">
      <load>compiler/pgi/14.10</load>
    </modules>
    <modules compiler="nag">
      <load>compiler/nag/5.3.1-907</load>
    </modules>
    <modules compiler="gnu">
      <load>compiler/gnu/4.4.7</load>
    </modules>
  </module_system>
  <environment_variables>
    <env name="P4_GLOBMEMSIZE">500000000</env>
    <env name="NETCDF_DIR">$NETCDF_PATH</env>
  </environment_variables>
  <limits>
    <limit name="stacksize">unlimited</limit>
    <limit name="coredumpsize">unlimited</limit>
  </limits>
</machine>
